%section.register.container
  .row
    .span10.offset1
      = bootstrap_form_for @user, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Register
        %fieldset
          = f.text_field :full_name, label: "Full Name"
          = f.email_field :email, label: "Email Address"  
          = f.password_field :password
        %fieldset.actions.control-group
          .controls
            =form_tag users_path do
              %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_bjOia1YDfbmh8OeAxkLaDOC5" data-amount="999" data-name="Sign up for MyFlix" data-description="$9.99/month!")
