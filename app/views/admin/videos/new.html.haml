%section.admin_add_video
  .container
    .row
      .span10.offset1
        = bootstrap_form_for [:admin, @video], class: "form-horizontal" do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %fieldset
            = f.text_field :name, class: "span3"
            = label_tag :genres, "Genre"
            = select_tag :genres, options_for_select(Genre.all.map {|genre| [genre.name, genre.id]})
            = f.text_area :description, rows: 4, class: "span4"
            .control-group
              %label.control-label Large Cover
              .controls
                %span.btn.btn-file
                  %input(type="file")
            .control-group
              %label.control-label Small Cover
              .controls
                %span.btn.btn-file
                  %input(type="file")

          %fieldset.actions.control-group
            .controls
              %input(type="submit" value="Add Video" class="btn")
