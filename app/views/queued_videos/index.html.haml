%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queued_videos.each do |queued_video|  
              %tr
                %td
                  %input(type="text" value="#{queued_video.queue_position}")
                %td
                  = link_to queued_video.video_name, video_path(queued_video)
                %td
                  = button_to "Play", nil, class: "btn"
                %td
                  = queued_video.rating
                %td
                  = link_to queued_video.genre_name, genre_path(queued_video)
                %td
                  = link_to "", method: :post do
                    %i.icon-remove
        = button_to "Update Instant Queue", nil, class: "btn"
