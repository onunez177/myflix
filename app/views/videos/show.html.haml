%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        %img(src="/tmp/#{@video.poster_url}.jpg")
      .video_info.span3
        %header
          %h3= @video.name
          - if @video.reviews.any?
            %span Average Rating: #{@video.reviews.avg_rating}/5.0
          - else
            %span No user ratings for this movie.
        %p= @video.description  
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn(href="") + My Queue

%section.reviews.container
  .row
    .span10.offset1
      = form_for [@video, Review.new] do |f|
        %fieldset
          %label Rate this video
          = f.select :rating, options_for_select([5,4,3,2,1].map { |number| [pluralize(number, "Star")]})
          %label Write Review
          = f.text_area :body, rows: 6, class: "span6"
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
        -unless @reviews.empty?
          %header
            %h3 User Reviews (#{@reviews.count})
          %ul
            - @reviews.each do |review|
              %article.review
                %li.row
                  .span2
                    %span Rating: #{review.rating} / 5
                    %p by <a href="">#{review.creator.full_name}</a>
                    %p 
                      %em #{timestamp(review.created_at)}  
                  .span8
                    %p= review.body