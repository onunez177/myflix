- if @results.empty?
  %h1= "Your search for '#{params[:search_term]}' did not return any movies."
- else
  %h1= "Your search for '#{params[:search_term]}' returned #{@results.size} #{"movie".pluralize(@results.size)}."
  - @results.each do |result|
    .video.span2
      = link_to image_tag("/tmp/#{result.small_cover_url}.jpg"), video_path(result)